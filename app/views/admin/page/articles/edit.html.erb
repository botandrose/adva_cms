<h2><%= t(:'adva.articles.titles.edit') %></h2>

<%= split_form_for @article, :url => [:admin, @section, @article], :html => {:multipart => true, :method => :put} do |f| -%>
  <%= f.hidden_field :updated_at, :value => @article.updated_at %>
  <%= render :partial => 'form', :locals => {:f => f} %>  

  <%= content_for :sidebar do %>
    <div id="save">
      <p class="buttons">
        <%= submit_tag t(:'adva.common.save'), :name => 'save_revision' %>
        <%= link_to t(:'adva.common.cancel'), [:admin, @section, :articles] %>
      </p>
    </div>
  <% end %>
<% end %>
