<%= f.text_field :meta_keywords, label: true, value: meta_value_from(@article.meta_keywords, @site.meta_keywords), hint: "Enter a few words separated by commas to describe your content. Meta keywords make it easier for search engines to find your page." %>
<%= f.text_area  :meta_description, class: 'small', label: true, hint: "Enter a short description of this page so a search engine can tell users what they can find here." %>
<%= f.text_field :meta_author, label: true, value: meta_value_from(@article.meta_author, @site.meta_author, current_user.name) %>
<%= f.text_field :meta_copyright, :label => true, :value => meta_value_from(@article.meta_copyright, @site.meta_copyright, "#{Date.today.year}, #{current_user.name}") %>
<%= f.text_field :meta_geourl, :label => true, :value => meta_value_from(@article.meta_geourl, @site.meta_geourl), hint: "See #{link_to "http://geourl.org/", "http://geourl.org/"} for details." %>
