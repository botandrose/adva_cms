<div id="header">
  <div class="main">
    <%= Breadcrumbs.new(menu.active.breadcrumbs).render if menu.active %>
  </div>

  <div class="right">
    <% if current_user.anonymous? %>
      You're not logged in <%= link_to "Log In", [:new, :session] %>
    <% else %>
        
      <%= "Logged in as: #{link_to_profile(name: current_user.name)}".html_safe %> &middot;
      <%= link_to "Logout", logout_path, method: :delete %>
    <% end %>

    <% if @site %>
      &middot;
      <%= link_to "Website Â»", "http://#{@site.host}", id: "go_to_website" %>
    <% end %>
  </div>
</div>
