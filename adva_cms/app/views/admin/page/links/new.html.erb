<h2><%= t(:'adva.links.titles.new', :content_locale => Article.locale) %></h2>

<%= split_form_for @link, :as => :link, :url => [:admin, @site, @section, :links] do |f| %>
  <%= render :partial => 'form', :locals => {:f => f} %>

  <%= content_for :sidebar do %>
    <div id="save">
      <%= submit_tag t(:'adva.common.save'), :name => 'save_revision' %>
      <%= link_to t(:'adva.common.cancel'), [:admin, @site, @section, :contents] %>
    </div>
  <% end %>
<% end %>
