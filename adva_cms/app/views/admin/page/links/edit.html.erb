<h2><%= t(:'adva.links.titles.edit') %></h2>

<%= split_form_for @link, :as => :link, :url => [:admin, @site, @section, @link] do |f| %>
  <%= render :partial => 'form', :locals => {:f => f} %>  

  <%= content_for :sidebar do %>
    <div id="save">
      <%= submit_tag t(:'adva.common.save'), :name => 'save_revision' %>
      <%= link_to t(:'adva.common.cancel'), [:admin, @site, @section, :contents] %>
    </div>
  <% end %>
<% end -%>
