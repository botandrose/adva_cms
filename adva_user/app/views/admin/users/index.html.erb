<ul id="users">
  <% @users.each do |user| %>
		<li>
		  <%= gravatar_img(user) %>
		  <h4><%= link_to user.name, admin_user_path(@site, user) %></h4>
		  <p><%= user.email %></p>
		  <p class="actions">
		    <%= link_to t(:'adva.links.edit'), edit_admin_user_path(@site, user), :class => 'edit' %>
        <%= link_to t(:'adva.links.delete'), admin_user_path(@site, user), :class => 'delete', :data => { :confirm => t(:'adva.users.confirm_delete') }, :method => :delete %>
		  </p>
		</li> 
	<% end %>
</ul>	
